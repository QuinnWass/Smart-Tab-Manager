{
    "name": "SmartTabManager",
    "version": "0.2.0",
    "manifest_version": 2,

    "background": {
        "page": "/background/background.html"
    },

    "sidebar_action": {
        "default_title": "Smart Tab Manager",
        "default_panel": "/sidebar/sidebar.html",
        "browser_style": true,
        "open_at_install":true
    },
    
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
      ]

}